@model WebDSM.Models.Categoria

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Nombre)</dt>
        <dd>@Html.DisplayFor(model => model.Nombre)</dd>

        <dt>Supercategoría</dt>
        @if (Model.NomSuper != null)
        {
            <dd>@Html.ActionLink(Model.NomSuper, null, new { id = Model.SuperId })</dd>
        }
        else
        {
            <dd>No tiene</dd>
        }

        <dt>Subcategorías</dt>
        @if (Model.Subs.Any())
        {
            foreach (var item in Model.Subs)
            {
                <dd>@Html.ActionLink(item.Nombre, null, new { id = item.Id })</dd>
            }
        }
        else
        {
            <dd>No tiene</dd>
        }

        <dt>Cantidadad de artículos</dt>
        <dd>@Model.Arts</dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
