@model IEnumerable<WebDSM.Models.Categoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var image = "../../Images/Cabecera.jpeg";
   
}


<div class="container-fluid pt-4 px-4">
    <div class="row">
        @foreach (var item in Model)
        {
            if (!item.Imagen.IsEmpty())
            {
                image = "../../Content/Uploads/Category/"+item.Imagen;
            }
            <div class="col-6 col-lg-2 p-2 pop-up">
                <a href="@Url.Action("Categoria","Articulo", new { item = item.Nombre})">
                    <div class="bg-black-2 box-shadow height-300px d-flex row m-0" id="category-card"> 
                            <div class="col-12 d-flex category-h align-items-center justify-content-center text-center text-white" style="background: url(@image) no-repeat center; background-size: cover;">
                            
                                <div class="h3 elegant shadow">
                                    @item.Nombre      
                                </div> 
                            
                            </div>              
                            <div class=" w-100 text-center h4 elegant text-white">
                                <i class="text-orange fab fa-ethereum"></i>&nbsp; @item.Arts Artículos
                            </div>
                    </div>
                </a>
            </div>
        }
    </div>

</div>