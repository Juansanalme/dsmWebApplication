@model WebDSM.Models.Registrado

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/SimpleLayout.cshtml";

    var errorPass = "";
    if (Session["errorAcces"] != null) {
        errorPass = "Las contraseñas no coinciden";
        System.Web.HttpContext.Current.Session.Remove("errorAcces");
    }
}

<div class="container pt-5">
    <div class="row header_login mb-3">
        <div class="col">
            @Html.ActionLink(" ", "../Home/Index", "Home", new { @class = "col nav-link logo_dark" })
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-lg-9">
            <div class="row h-100 mx-sm-5 bg-black p-4 justify-content-center">
            <div class="col-12 elegant h2 mb-2 text-center"><i class="fas fa-user-plus text-orange"></i> Registro</div>
                    @using (Html.BeginForm("Create", "Registrado", FormMethod.Post,new { @class="w-100", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
    
                        <div class="row px-2">
                            <div class="form-group col-12">
                                @Html.LabelFor(model => model.NUsuario, htmlAttributes: new { @class = "control-label" }) <span class="text-blood">*</span>

                                @Html.EditorFor(model => model.NUsuario, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NUsuario, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="row px-2">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group col-12 col-md-5">
                                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" }) <span class="text-blood">*</span>
                                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-12 col-md-7">
                                @Html.LabelFor(model => model.Apellidos, htmlAttributes: new { @class = "control-label" }) <span class="text-blood">*</span>

                                @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="row px-2">
                            <div class="form-group col-12 col-md-2">
                                @Html.LabelFor(model => model.Edad, htmlAttributes: new { @class = "control-label" }) <span class="text-blood">*</span>
                                @Html.EditorFor(model => model.Edad, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Edad, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-12 col-md-4">
                                @Html.LabelFor(model => model.Dni, htmlAttributes: new { @class = "control-label" }) <span class="text-blood">*</span>

                                @Html.EditorFor(model => model.Dni, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Dni, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group col-12 col-md-6">
                                @Html.LabelFor(model => model.FNacimiento, htmlAttributes: new { @class = "control-label" }) <span class="text-blood">*</span>
                                @Html.EditorFor(model => model.FNacimiento, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FNacimiento, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row px-2">
                            <div class="form-group col-12 col-sm-6">
                                @Html.LabelFor(model => model.Contrasenya, htmlAttributes: new { @class = "control-label" }) <span class="text-blood">*</span>
                                @Html.EditorFor(model => model.Contrasenya, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Contrasenya, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-12 col-sm-6">
                                <label for="repe">Repetir contraseña <span class="text-blood">*</span></label>
                                <input type="password" name="repe" id="repe" class="form-control" />
                                @Html.ValidationMessageFor(model => model.Contrasenya, "", new { @class = "text-danger" })
                            </div>
                            <div class="invalid-feedback" id="error">@errorPass</div>
                        </div>

                        <div class="row px-2">
                            <div class="form-group col-12">
                                <label for="file">Foto de perfil</label>
                                <input class="d-block" type="file" id="file" name="file" value="Browse" />
                            </div>
                        </div>
                        <div class="row px-2">
                            <div class="col">
                                <p>¿Ya estás registrado NA-ME? @Html.ActionLink("Inicia sesión", "Login", "Registrado", new { @class = "text-orange" })</p>
                            </div>
                        </div>

                        <div class="form-group mt-3 d-flex justify-content-center">
                            <div class="col-md-10">
                                <input class="col-12 btn btn-outline-warning pointer" type="submit" value="Registrarse" />
                            </div>
                        </div>
  
                    }

            </div>
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
