@model IEnumerable<WebDSM.Models.Pedido>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int UserId = 0;
    string aux = Request.RawUrl; @*/Pedido/Index/32768*@


    if (Session["login"] == null)
    {
        Response.Redirect("~/Registrado/Login");
    }
    else if (aux != "/Pedido/Index/"+(int)Session["idUsuario"] && (bool)Session["admin"] == false)
    {

        Response.Redirect("~/Home");
    }
    else
    {
        UserId = (int)Session["idUsuario"];
    }


}

<h2>Lista de Pedidos</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Fecha)</th>
        <th>@Html.DisplayNameFor(model => model.Total)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
            <td>@Html.DisplayFor(modelItem => item.Total)</td>
            <td>
                @Html.ActionLink("Detalles del pedido", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<p>
    @if (UserId != 0)
    {
        @Html.ActionLink("Volver al Perfil", "../Registrado/Perfil", new { id = UserId })
    }
    else
    {
        <p>No logeado</p>
    }
</p>
