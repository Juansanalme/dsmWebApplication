@model IEnumerable<WebDSM.Models.Puja>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pujas</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Articulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PujaInicial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PujaMaxima)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cerrada)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Articulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PujaInicial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PujaMaxima)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cerrada)
        </td>
        <td>
            @Html.ActionLink("Ver la puja", "Details", new { id = item.Id })
        </td>
    </tr>
}

</table>
