                <div class="form-group row">
                    <div class="col-10">
                        <input type="hidden" name="id" value="@Html.DisplayFor(model => model.Id)" />
                        <input type="number" step="0.01" name="puja" />
                    </div>
                </div>
                <div class="form-group mt-3">
                    <div class="col-md-offset-2 col-md-10">
                        <input class="col-12 ml-md-4 ml-lg-5 btn btn-outline-light pointer" type="submit" value="Pujar" />
