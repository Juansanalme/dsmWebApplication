            </div>
            <div class="h3 elegant">CS:GO Knife (Nombre del juego?)</div>
            <div>
                @Html.DisplayFor(model => model.ArtDescripcion)
            </div>
            <div class="h3 text-capitalize mt-4 elegant">
                PUJA MAXIMA:
                <span class="text-blood">
                    @Html.DisplayFor(model => model.PujaMaxima)
                    €
                </span>
            </div>

            @Session["idUsuario"]
